{
  "name": "PassMadeEasy",
  "short_name": "PassMadeEasy",
  "version": "0.1.0",
  "description": "This extension will let you transmogrify your weak, often times shared, password into more sophiscated and site-unique ones",
  "browser_action": {
    "default_popup": "index.html",
    "default_title": "Password made easy"
  },
  "permissions": ["activeTab", "clipboardWrite", "storage"],
  "manifest_version": 2,
  "icons": [
    {
      "src": "favicon.ico",
      "sizes": "64x64 32x32 24x24 16x16",
      "type": "image/x-icon"
    }
  ],
  "start_url": ".",
  "display": "standalone",
  "theme_color": "#000000",
  "background_color": "#ffffff"
}
